<div class="activity-section">
    <div class="activity-header">
        <h3 class="activity-title">{{ 'pteroca.dashboard.last_activity'|trans }}</h3>
        <p class="activity-subtitle">Recent account actions and events</p>
    </div>

    {% if logs|length > 0 %}
        <div class="activity-list">
            {% for log in logs %}
                <div class="activity-item">
                    <div class="activity-icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v4"/><path d="m16.2 7.8 2.9-2.9"/><path d="M18 12h4"/><path d="m16.2 16.2 2.9 2.9"/><path d="M12 18v4"/><path d="m4.9 19.1 2.9-2.9"/><path d="M2 12h4"/><path d="m4.9 4.9 2.9 2.9"/></svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-action">{{ ('pteroca.actions.' ~ log.actionId)|trans }}</div>
                        <div class="activity-meta">
                            <span class="activity-ip">{{ log.ipAddress }}</span>
                            <span class="activity-separator">â€¢</span>
                            <span class="activity-date">{{ log.createdAt|date('M d, Y H:i') }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="activity-empty">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v4"/><path d="m16.2 7.8 2.9-2.9"/><path d="M18 12h4"/><path d="m16.2 16.2 2.9 2.9"/><path d="M12 18v4"/><path d="m4.9 19.1 2.9-2.9"/><path d="M2 12h4"/><path d="m4.9 4.9 2.9 2.9"/></svg>
            </div>
            <h4 class="empty-title">{{ 'pteroca.dashboard.no_activity'|trans }}</h4>
            <p class="empty-description">{{ 'pteroca.dashboard.no_activity_description'|trans }}</p>
        </div>
    {% endif %}
</div>
